<div class="container">
	<div class="col-md-4">
		<br>
		<% if @product.photos.present? %>
						 <%= image_tag(@product.photos[0].medium.url) %>

					<% else %>
							<%= image_tag("//placehold.it/200x200&text=No Pic") %>

					<% end %>
	</div>
	<div class="col-md-4 col-md-offset-1">
		<h2><%= simple_format(@product.title) %></h2>
		<br>
		<h3>价格</h3><%= @product.price %>
		<h3>库存</h3><%= @product.quantity %>
		<h3>描述</h3><%= simple_format(@product.description) %>
	</div>
</div>
